<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dalong.pullrefresh.widget.RingProgressBar
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        app:max="100"
        app:ringImage="@mipmap/jiantou"
        app:ringColor="@android:color/transparent"
        app:ringProgressColor="@android:color/darker_gray"
        app:ringWidth="1dp"
        app:style="STROKE"
        app:textColor="@color/colorPrimary"
        app:textIsShow="false"
        app:textSize="16sp"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/ring_refresh_status"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:text="下拉刷新"
        android:gravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>